<%= form_for( :info, url: abouts_path) do |form| %>

    <% if @about.errors.any? %>
        <h2><%= pluralize(@about.errors.count, "error") %>prevented this post from saving</h2>
        <ul>
            <% @about.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
        </ul>
    <% end %>


<%= form.label :text, "Write info here" %><br>
<%= form.text_area :text %>

    <br>
    <br>

    <%= form.submit %>

<% end %>



