<div id="post_show_content" class="skinny_wrapper wrapper_padding">
   <header>
       <p class="date"><%= @post.created_at.strftime('%A, %B %d') %></p>
       <%= image_tag @post.image.url(:medium) %>
       <h1><%= @post.title %></h1>
       <hr>
   </header>
    
    <div id="content">
        <%= @post.content %>
            <hr>
        
    </div>


        <div id="admin_links">
            <%= link_to "Edit", edit_post_path(@post) %>
            <%= link_to "Delete", post_path(@post), method: :delete, data: { confirm: "Are you sure you want to delete this post?"} %>
        </div>


    
    <div id="share_box">
        <p>UdostÄ™pnij</p>
        <a onclick="javascript:window.open('http://twitter.com/share?text=<%= @post.title %> by @twitter_user - &amp; url=<%= url_for([@post, {only_path: false}]) %>', '_blank', 'width=800, height=500, top=200, left=300');void(0);"><i class="fa fa-twitter"></i></a>
        
        <a onclick="javascript:window.open('http://www.facebook.com/sharer.php?u=<%= url_for ([@post, { only_path: false}]) %>', '_blank', 'width=800, height=500, top=200, left=300');void(0);"><i class="fa fa-facebook"></i></a>
         
        <a onclick="javascript:window.open('http://www.vk.com/share.php?u=<%= url_for ([@post, { only_path: false}]) %>', '_blank', 'width=800, height=500, top=200, left=300');void(0);"><i class="fa fa-vk"></i></a>        
            <hr>
    </div>
</div>


